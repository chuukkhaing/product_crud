{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Stock Quantity</th>
            <td>{{ product.stockQuantity }}</td>
        </tr>
        <tr>
            <th>Created Datetime</th>
            <td>{{ product.createdDatetime|date('Y-m-d H:i:s') }}</td>
        </tr>
    </table>
    <a href="{{ path('product_index') }}" class="btn btn-primary btn-sm">Back to list</a>
    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">Edit</a>
    {{ include('product/_delete_form.html.twig', {'product': product}) }}
{% endblock %}
